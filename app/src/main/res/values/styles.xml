<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ScoreTitle">

    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_card</item>
<!--        <item name="android:background">@color/transparent</item>-->
    </style>



    <style name="BallSign">
        <item name="android:textSize">35sp</item>
<!--        <item name="android:letterSpacing">0.4</item>-->
        <item name="android:layout_marginStart">@dimen/margin</item>
    </style>

    <style name="PlayerNumber">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlayerName">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GameCardTitle">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="GameCardScore">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="GameInning">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="GameTitle">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="GameScore">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="EventPage">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="EventDetailText">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GameButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">18sp</item>
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/orange</item>
    </style>

    <style name="Dialog">
        <item name="android:windowBackground">@color/black_transparent</item>
    </style>

    <style name="FinalTable">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">@dimen/final_table_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FinalTableTitle" parent="FinalTable">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlayerTable">
        <item name="android:layout_width">@dimen/player_box_width</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CreateTeamTitle">
        <item name="android:textSize">22sp</item>
    </style>

</resources>