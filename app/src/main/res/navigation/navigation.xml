<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/navigation"
    app:startDestination="@id/gameFragment">

    <fragment
        android:id="@+id/battingFragment"
        android:name="com.gillian.baseball.game.batting.BattingFragment"
        android:label="BattingFragment" />

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.gillian.baseball.game.GameFragment"
        android:label="GameFragment" />
    <dialog
        android:id="@+id/eventDialog"
        android:name="com.gillian.baseball.game.dialog.EventDialog"
        android:label="EventDialog" >
        <argument
            android:name="preEvent"
            app:argType="com.gillian.baseball.data.Event" />
    </dialog>

    <fragment
        android:id="@+id/statFragment"
        android:name="com.gillian.baseball.statistics.StatFragment"
        android:label="StatFragment" />
    <fragment
        android:id="@+id/teamFragment"
        android:name="com.gillian.baseball.team.TeamFragment"
        android:label="TeamFragment" />

    <action android:id="@+id/navigationToEventDialog" app:destination="@id/eventDialog" />
    <action android:id="@+id/navigationToStat" app:destination="@id/statFragment" />
    <action android:id="@+id/navigationToTeam" app:destination="@id/teamFragment" />
    <action android:id="@+id/navigationToGame" app:destination="@id/gameFragment" />

</navigation>