<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewModel"
            type="com.gillian.baseball.game.finalGame.FinalViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_final_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="@{viewModel.scoreBox}"
            app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintTop_toTopOf="@+id/textView7"
            tools:text="0 - 0 - 0 - 0" />

        <TextView
            android:id="@+id/text_final_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.runBox}"
            app:layout_constraintStart_toStartOf="@+id/text_final_score"
            app:layout_constraintTop_toTopOf="@+id/textView8"
            tools:text="0 - 0" />

        <TextView
            android:id="@+id/text_final_hit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.hitBox}"
            app:layout_constraintStart_toStartOf="@+id/text_final_run"
            app:layout_constraintTop_toTopOf="@+id/textView9"
            tools:text="0 - 0" />

        <TextView
            android:id="@+id/text_final_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{viewModel.errorBox}"
            app:layout_constraintStart_toStartOf="@+id/text_final_hit"
            app:layout_constraintTop_toTopOf="@+id/textView10"
            tools:text="0 - 0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="Score"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Run"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Hit"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="Error"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>