<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="game"
            type="com.gillian.baseball.data.GameCard" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/game_card_height"
        app:cardCornerRadius="@dimen/card_radius"
        app:cardElevation="@dimen/card_elevation"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_game_end_date"
                style="@style/GameCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:text="TextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="5/5" />

            <TextView
                android:id="@+id/text_game_end_title"
                style="@style/GameCardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin"
                android:text="@{game.title}"
                app:layout_constraintStart_toEndOf="@+id/text_game_end_date"
                app:layout_constraintTop_toTopOf="@+id/text_game_end_date"
                tools:text="全國棒球大專盃8強" />

            <TextView
                android:id="@+id/text_game_end_score"
                style="@style/GameCardScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin"
                android:layout_marginBottom="4dp"
                android:text='@{String.valueOf(game.guestScore) + ":" + String.valueOf(game.homeScore)}'
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="3:2" />

            <TextView
                android:id="@+id/text_game_end_your"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:text="@string/your_performance"
                app:layout_constraintBottom_toTopOf="@+id/recycler_game_end"
                app:layout_constraintStart_toStartOf="@+id/text_game_end_date" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_game_end"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="@id/image_for_align"
                app:layout_constraintEnd_toStartOf="@id/text_game_end_score"
                app:layout_constraintStart_toStartOf="@id/text_game_end_your"
                tools:listitem="@layout/item_personal_score" />

            <ImageView
                android:id="@+id/image_for_align"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_date_range_24"
                android:baselineAlignBottom="true"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="@id/recycler_game_end"
                app:layout_constraintBaseline_toBaselineOf="@id/text_game_end_score"
                tools:visibility="visible"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>