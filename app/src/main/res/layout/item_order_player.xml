<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="player"
            type="com.gillian.baseball.data.EventPlayer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card"
        android:layout_margin="4dp">

        <TextView
            style="@style/PlayerNumber"
            android:id="@+id/text_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginStart="@dimen/double_margin"
            android:text="@{String.valueOf(player.number)}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="24"/>

        <TextView
            style="@style/PlayerName"
            android:id="@+id/text_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/double_margin"
            android:text="@{player.name}"
            app:layout_constraintTop_toTopOf="@id/text_order_number"
            app:layout_constraintBottom_toBottomOf="@id/text_order_number"
            app:layout_constraintStart_toEndOf="@id/text_order_number"
            tools:text="蘇智傑"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>